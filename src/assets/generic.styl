@require 'variables'

.z-icon
	font-family 'zarahion-icon-mix'
	font-size 1em

subtle()
	&.subtle
		background alpha(@background, 0.25)
		color color-main

.primary.primary
	background color-primary
	color color-white
	subtle()

.sub.sub
	background color-sub
	color color-white
	subtle()

.danger.danger
	background color-danger
	color color-white
	subtle()

.warn.warn
	background color-warn
	color color-white
	subtle()

// kinda should find better solution rather than snapping !important or tripling selector
.has-text-primary
	color color-primary !important

.has-text-sub
	color color-sub !important

.has-text-danger
	color color-danger !important

.title
	text-transform uppercase
	font-weight lighter
